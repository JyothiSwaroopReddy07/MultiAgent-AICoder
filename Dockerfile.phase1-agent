# Phase 1: Discovery & Analysis Agents
# - Requirements Analyst
# - Research Agent
# - Tech Stack Decision Agent
FROM python:3.10-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    gcc \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements
COPY backend/requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy only necessary code for Phase 1 agents
COPY backend/agents/__init__.py ./agents/
COPY backend/agents/base_agent.py ./agents/
COPY backend/agents/phase1_discovery/ ./agents/phase1_discovery/
COPY backend/models/ ./models/
COPY backend/mcp/ ./mcp/
COPY backend/utils/ ./utils/
COPY backend/config.py .

# Create logs directory
RUN mkdir -p /app/logs

# Environment
ENV PYTHONPATH=/app
ENV AGENT_PHASE=phase1

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=30s --retries=3 \
    CMD python -c "import sys; sys.exit(0)"

# Run Celery worker for Phase 1 agents
CMD ["celery", "-A", "agents.workers.phase1_worker", "worker", \
     "--loglevel=info", "--concurrency=4", "-Q", "phase1_queue"]

