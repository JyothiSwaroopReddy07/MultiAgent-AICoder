# Phase 4: Quality Assurance Agents
# - Security Auditor
# - Debugger
# - Code Reviewer
FROM python:3.10-slim

WORKDIR /app

RUN apt-get update && apt-get install -y gcc && rm -rf /var/lib/apt/lists/*

COPY backend/requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy Phase 4 agent code
COPY backend/agents/__init__.py ./agents/
COPY backend/agents/base_agent.py ./agents/
COPY backend/agents/phase4_qa/ ./agents/phase4_qa/
COPY backend/agents/reviewer_agent.py ./agents/
COPY backend/models/ ./models/
COPY backend/mcp/ ./mcp/
COPY backend/utils/ ./utils/
COPY backend/config.py .

RUN mkdir -p /app/logs

ENV PYTHONPATH=/app
ENV AGENT_PHASE=phase4

HEALTHCHECK --interval=30s --timeout=10s --start-period=30s --retries=3 \
    CMD python -c "import sys; sys.exit(0)"

CMD ["celery", "-A", "agents.workers.phase4_worker", "worker", \
     "--loglevel=info", "--concurrency=3", "-Q", "phase4_queue"]

